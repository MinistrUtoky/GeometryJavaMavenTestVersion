                        <ComboBox prefWidth="200" fx:id="FigureToIntersect1" GridPane.rowIndex="1" GridPane.columnIndex="1">
                                <items>
                                </items>
                        </ComboBox>
                        <ComboBox prefWidth="200" fx:id="FigureToIntersect2" GridPane.rowIndex="1" GridPane.columnIndex="3">
                                <items>
                                </items>
                        </ComboBox>
                        <Button disable="true" prefWidth="200" GridPane.columnIndex="7" GridPane.rowIndex="1"
                                fx:id="ShapesIntersectionButton" onAction="#IntersectShapes_Click">Intersect Shapes</Button>
                </GridPane>
        </GridPane>
