        <HBox spacing="0" layoutY="-1.0" prefHeight="20.0" prefWidth="800" GridPane.rowIndex="0">
                <padding>
                        <Insets top="0" bottom="0" right="0" left="0"></Insets>
                </padding>
                <Button prefWidth="100" text="Main Form" onAction="#OpenMainForm"></Button>
                <Button prefWidth="100" text="Add Figure" onAction="#OpenFigureAdditionForm"></Button>
                <Button prefWidth="100" text="Move Figure" onAction="#OpenFigureMovementForm"></Button>
                <Button prefWidth="100" text="Remove Figure" onAction="#OpenFigureRemovalForm"></Button>
