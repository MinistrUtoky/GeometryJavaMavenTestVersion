                <GridPane maxWidth="800" gridLinesVisible="false" visible="true" fx:id="MainFormGrid">
                        <columnConstraints>
                                <ColumnConstraints percentWidth="0.625"/>
                                <ColumnConstraints percentWidth="0.075"/>
                                <ColumnConstraints percentWidth="0.187"/>
                                <ColumnConstraints percentWidth="0.113"/>
                        </columnConstraints>

                        <Canvas fx:id="MainCanvas"  height="500" width="500" GridPane.columnIndex="0">
                        </Canvas>
                        <VBox spacing="20" alignment="TOP_LEFT" GridPane.columnIndex="2">
                                <padding>
                                        <Insets top="28"/>
                                </padding>
                                <Button maxWidth="800" fx:id="Clear" onAction="#Clear_Click">
                                        Clear Canvas
                                </Button>
                                <Button maxWidth="800" fx:id="Perimeter" onAction="#Perimeter_Click">
                                        Shapes' Perimeters Total
                                </Button>
                                <Button maxWidth="800" fx:id="Area" onAction="#Area_Click">
                                        Shapes' Areas Total
                                </Button>
                        </VBox>
                        <Text translateY="200" GridPane.halignment="RIGHT" textAlignment="RIGHT"
                              fx:id="PerimeterOrArea" GridPane.columnIndex="1" GridPane.columnSpan="2"/>
                </GridPane>
                <GridPane maxWidth="800" gridLinesVisible="false" visible="false" fx:id="FigureAdditionForm" GridPane.rowIndex="0">
                        <columnConstraints>
                                <ColumnConstraints prefWidth="60" maxWidth="50"/>
