                                <RowConstraints percentHeight="90"/>
                        </rowConstraints>
                        <columnConstraints>
                                <ColumnConstraints prefWidth="250" maxWidth="50"/>
                                <ColumnConstraints prefWidth="250" maxWidth="120"/>
                                <ColumnConstraints prefWidth="250" maxWidth="50"/>
                                <ColumnConstraints prefWidth="290" maxWidth="290"/>
                                <ColumnConstraints prefWidth="250" maxWidth="50"/>
                                <ColumnConstraints prefWidth="250" maxWidth="150"/>
                                <ColumnConstraints prefWidth="250" maxWidth="50"/>
                        </columnConstraints>
                        <ComboBox prefWidth="200" fx:id="FigureToRemove" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                  onAction="#FigureToRemoveChanged">
                                <items>
